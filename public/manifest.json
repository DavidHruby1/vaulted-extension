{
  "manifest_version": 3,
  "name": "Vaulted",
  "version": "0.0.1",
  "description": "Personal library to manage, store, and quickly use prompts for AI chatbots",
  "author": "David Hrub√Ω",

  "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "activeTab"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*",
    "https://chat.qwen.ai/*",
    "https://www.perplexity.ai/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://chat.qwen.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "css": ["assets/content.css"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Toggle Vaulted side panel"
    }
  },

  "action": {
    "default_popup": "",
    "default_title": "Open Vaulted",
    "default_icon": {
      "128": "icons/vaulted_icon128.png"
    }
  },

  "icons": {
    "128": "icons/vaulted_icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "sidepanel.html",
        "sidepanel.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://chat.qwen.ai/*",
        "https://www.perplexity.ai/*"
      ]
    }
  ]
}
